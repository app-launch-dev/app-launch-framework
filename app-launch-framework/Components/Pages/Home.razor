@page "/"

<PageTitle>AppLaunch.dev</PageTitle>
<HeadContent>
    <style>
    html, body {
      height: 100%;
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    body {
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      background: #f5f5f5;
    }
    .center-image {
      max-width: 90vw;
      max-height: 80vh;
      box-shadow: 0 4px 16px rgba(0,0,0,0.15);
      border-radius: 12px;
      background: #fff;
      padding: 24px;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .center-image img {
      max-width: 100%;
      max-height: 60vh;
      display: block;
      border-radius: 8px;
    }
  </style>
</HeadContent>

<div class="center-image">
    <img src="/img/applaunch_dev_light.png" alt="AppLaunch.dev Logo">
</div>
